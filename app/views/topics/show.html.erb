<progress id="progressbar" value="0" max="100"></progress>

<div id='show-topic'>
  <p>
    <strong>Topic:</strong>
    <%= @topic.title %>
  </p>

  <p>
    <strong>About:</strong>
    <%= @topic.text %>
  </p>

  <h2>Comments</h2>
  <%= render @topic.comments %>

  <div id='add-comment-form'>
    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>

    <%= link_to 'Edit', edit_topic_path(@topic) %>
    <%= link_to 'Back', topics_path %>
  </div>
</div>
